package share.evenchecker;

public class EvenGenerator extends IntGenerator {

	private int value = 0;

	@Override
	public int next() {
		++value;
		++value;
//		value = 2;
		try {
			Thread.sleep( 1000 );
		} catch( InterruptedException e ) {
			System.out.println( "interrupted..." );
		}
		return value;
	}

	public static void main(String[] args) {

		IntGenerator g = new EvenGenerator();
		EvenChecker.test( g );
	}
}
